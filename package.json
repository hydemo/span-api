{
  "name": "span",
  "version": "1.0.0",
  "description": "span",
  "author": "oy",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc",
    "format": "prettier --write \"/**/*.ts\"",
    "start": "export NODE_ENV=development && ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && tsc",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "pm2": "pm2 start pm2.yml"
  },
  "dependencies": {
    "@alicloud/sms-sdk": "^1.1.6",
    "@nestjs/common": "^5.4.0",
    "@nestjs/core": "^5.4.0",
    "@nestjs/jwt": "^0.2.1",
    "@nestjs/mongoose": "^5.2.2",
    "@nestjs/passport": "^5.1.0",
    "@nestjs/swagger": "^2.5.1",
    "@pardjs/common": "^0.0.4",
    "@types/mongoose": "^5.3.3",
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "body-parser-xml": "^1.1.0",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "co-wechat-oauth": "^2.0.1",
    "dotenv": "^6.2.0",
    "fs": "^0.0.1-security",
    "joi": "^14.3.1",
    "lodash": "^4.17.15",
    "md5": "^2.2.1",
    "moment": "^2.24.0",
    "mongoose": "^5.3.14",
    "nestjs-redis": "~1.1.2",
    "node-schedule": "^1.3.2",
    "nodemailer": "^6.3.0",
    "nodemailer-smtp-transport": "^2.7.4",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "qiniu": "^7.2.1",
    "reflect-metadata": "^0.1.12",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "rimraf": "^2.6.2",
    "rxjs": "^6.2.2",
    "typescript": "^3.0.1",
    "util": "^0.12.1",
    "weixinpay": "^1.0.12",
    "xlsx": "^0.15.1"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.1.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.1",
    "@types/joi": "^14.3.1",
    "@types/node": "^10.7.1",
    "@types/supertest": "^2.0.5",
    "jest": "^23.5.0",
    "nodemon": "^1.18.3",
    "prettier": "^1.14.2",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.8.0",
    "tslint": "5.11.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "env"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
